<%- include('header') %>

<h1>Cartes recherch√©es</h1>

<div class="cardsContainer">
    <% for (let card of searchedCard) { %>
  
      <div class="card">
        <a href="/card/<%= card.id%>">
          <img src="/visuals/<%= card.visual_name %>" alt="<%= card.name %> illustration">
          <p class="cardName"><%= card.name %></p>
        </a>
        <a class="link--addCard" title="Ajouter au deck" href="/deck/<%=card.id%>">[ + ]</a>
        <a class="link--removeCard" title="Retirer du deck" href="/deck/remove/<%=card.id%>">[ - ]</a>
      </div>
  
    <% } %>
  </div>


<%- include('footer') %>